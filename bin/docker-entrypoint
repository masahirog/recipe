#!/bin/bash
set -e

# Remove a potentially pre-existing server.pid for Rails.
rm -f /rails/tmp/pids/server.pid

# If running the rails server then create or migrate existing database
if [ "${*}" == "./bin/rails server" ]; then
  echo "Preparing database..."
  
  if [ "$RAILS_ENV" = "production" ] && [ "$FORCE_DB_RESET" = "true" ]; then
    echo "FORCE_DB_RESET is set. Resetting database..."
    bundle exec rails db:drop || true
    bundle exec rails db:create
    bundle exec rails db:schema:load
  else
    bundle exec rails db:prepare
  fi
  
  # Run seed in production
  if [ "$RAILS_ENV" = "production" ]; then
    echo "Checking for seed data..."
    bundle exec rails db:seed || echo "Seed may have already been run"
  fi
fi

# Then exec the container's main process (what's set as CMD in the Dockerfile).
exec "$@"